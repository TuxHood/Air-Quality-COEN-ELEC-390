<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#F5F5F5">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Air Quality Monitor"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="#1976D2"
        android:layout_marginBottom="20dp"/>

    <TextView
        android:id="@+id/tvConnectionStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Not Connected"
        android:textSize="16sp"
        android:gravity="center"
        android:textColor="#D32F2F"
        android:layout_marginBottom="16dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="20dp">

        <Button
            android:id="@+id/btnConnect"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Connect"
            android:layout_marginEnd="8dp"
            android:backgroundTint="#4CAF50"/>

        <Button
            android:id="@+id/btnDisconnect"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Disconnect"
            android:layout_marginStart="8dp"
            android:backgroundTint="#F44336"/>
    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:elevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sensor Readings"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#1976D2"
                android:layout_marginBottom="12dp"/>

            <TextView
                android:id="@+id/tvCO2Level"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="CO2: --"
                android:textSize="16sp"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:id="@+id/tvTVOCLevel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TVOC: --"
                android:textSize="16sp"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:id="@+id/tvSmokeLevel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Smoke: --"
                android:textSize="16sp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/tvAirQualityStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Air Quality: --"
                android:textSize="18sp"
                android:textStyle="bold"
                android:gravity="center"
                android:textColor="#388E3C"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Make sure ESP32 is paired before connecting"
        android:textSize="12sp"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:textColor="#757575"/>

</LinearLayout>
