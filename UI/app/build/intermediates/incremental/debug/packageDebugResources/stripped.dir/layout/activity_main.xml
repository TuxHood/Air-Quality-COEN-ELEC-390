<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/topAppBar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="?attr/colorPrimary"
            android:title="@string/app_name"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:titleTextColor="@android:color/white" />


        <TextView
            android:id="@+id/HometextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Air Quality"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.1" />

        <Button
            android:id="@+id/homeButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Connect"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.514"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/HometextView"
            app:layout_constraintVertical_bias="0.94" />

        <TextView
            android:id="@+id/co2LabelTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CO2 Level:"
            android:textSize="18sp"
            app:layout_constraintBottom_toTopOf="@+id/homeButton"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.299"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/HometextView"
            app:layout_constraintVertical_bias="0.27" />

        <TextView
            android:id="@+id/CO2TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="Disconnected"
            android:textSize="18sp"
            app:layout_constraintBaseline_toBaselineOf="@+id/co2LabelTextView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.044"
            app:layout_constraintStart_toEndOf="@+id/co2LabelTextView" />

        <TextView
            android:id="@+id/tvocLabelTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TVOC Level:"
            android:textSize="18sp"
            app:layout_constraintBottom_toTopOf="@id/homeButton"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/co2LabelTextView"
            app:layout_constraintTop_toBottomOf="@+id/co2LabelTextView"
            app:layout_constraintVertical_bias="0.071" />

        <TextView
            android:id="@+id/TVOCTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="Disconnected"
            android:textSize="18sp"
            app:layout_constraintBaseline_toBaselineOf="@+id/tvocLabelTextView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.044"
            app:layout_constraintStart_toEndOf="@+id/tvocLabelTextView" />

        <TextView
            android:id="@+id/propaneLabelTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Propane Level:"
            android:textSize="18sp"
            app:layout_constraintBottom_toTopOf="@id/homeButton"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/tvocLabelTextView"
            app:layout_constraintTop_toBottomOf="@+id/tvocLabelTextView"
            app:layout_constraintVertical_bias="0.076" />

        <TextView
            android:id="@+id/PropaneTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:text="Disconnected"
            android:textSize="18sp"
            app:layout_constraintBaseline_toBaselineOf="@+id/propaneLabelTextView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.044"
            app:layout_constraintStart_toEndOf="@+id/propaneLabelTextView" />

        <TextView
            android:id="@+id/coLabelTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CO Level:"
            android:textSize="18sp"
            app:layout_constraintBottom_toTopOf="@id/homeButton"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/propaneLabelTextView"
            app:layout_constraintTop_toBottomOf="@+id/propaneLabelTextView"
            app:layout_constraintVertical_bias="0.083" />

        <TextView
            android:id="@+id/COTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="Disconnected"
            android:textSize="18sp"
            app:layout_constraintBaseline_toBaselineOf="@+id/coLabelTextView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.044"
            app:layout_constraintStart_toEndOf="@+id/coLabelTextView" />

        <TextView
            android:id="@+id/smokeLabelTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Smoke Level:"
            android:textSize="18sp"
            app:layout_constraintBottom_toTopOf="@id/homeButton"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/coLabelTextView"
            app:layout_constraintTop_toBottomOf="@+id/coLabelTextView"
            app:layout_constraintVertical_bias="0.13" />

        <TextView
            android:id="@+id/SmokeTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="Disconnected"
            android:textSize="18sp"
            app:layout_constraintBaseline_toBaselineOf="@+id/smokeLabelTextView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.044"
            app:layout_constraintStart_toEndOf="@+id/smokeLabelTextView" />

        <TextView
            android:id="@+id/alcoholLabelTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Alcohol Level:"
            android:textSize="18sp"
            app:layout_constraintBottom_toTopOf="@id/homeButton"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/smokeLabelTextView"
            app:layout_constraintTop_toBottomOf="@+id/smokeLabelTextView"
            app:layout_constraintVertical_bias="0.127" />

        <TextView
            android:id="@+id/AlcoholTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="Disconnected"
            android:textSize="18sp"
            app:layout_constraintBaseline_toBaselineOf="@+id/alcoholLabelTextView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.044"
            app:layout_constraintStart_toEndOf="@+id/alcoholLabelTextView" />

        <TextView
            android:id="@+id/methaneLabelTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Methane Level:"
            android:textSize="18sp"
            app:layout_constraintBottom_toTopOf="@id/homeButton"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/alcoholLabelTextView"
            app:layout_constraintTop_toBottomOf="@+id/alcoholLabelTextView"
            app:layout_constraintVertical_bias="0.226" />

        <TextView
            android:id="@+id/MethaneTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="Disconnected"
            android:textSize="18sp"
            app:layout_constraintBaseline_toBaselineOf="@+id/methaneLabelTextView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.044"
            app:layout_constraintStart_toEndOf="@+id/methaneLabelTextView" />

        <TextView
            android:id="@+id/h2LabelTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="H2 Level:"
            android:textSize="18sp"
            app:layout_constraintBottom_toTopOf="@id/homeButton"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/methaneLabelTextView"
            app:layout_constraintTop_toBottomOf="@+id/methaneLabelTextView"
            app:layout_constraintVertical_bias="0.362" />

        <TextView
            android:id="@+id/H2TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="Disconnected"
            android:textSize="18sp"
            app:layout_constraintBaseline_toBaselineOf="@+id/h2LabelTextView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.044"
            app:layout_constraintStart_toEndOf="@+id/h2LabelTextView" />

        <TextView
            android:id="@+id/indexLabelTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Air Quality Index:"
            android:textSize="18sp"
            app:layout_constraintBottom_toTopOf="@+id/homeButton"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.299"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/HometextView"
            app:layout_constraintVertical_bias="0.127" />

        <TextView
            android:id="@+id/indexTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="Disconnected"
            android:textSize="18sp"
            app:layout_constraintBaseline_toBaselineOf="@+id/indexLabelTextView"
            app:layout_constraintStart_toEndOf="@+id/indexLabelTextView" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>


