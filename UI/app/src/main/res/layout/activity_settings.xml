<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/topAppBar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:title="@string/action_settings"
        app:titleTextColor="@android:color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Your settings content below -->
    <!-- Example placeholder: -->
    <CheckBox android:id="@+id/checkbox_CO2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CO2"
        android:layout_marginStart="16dp"
       app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/topAppBar"
        app:layout_constraintVertical_bias="0.15"/>
    <CheckBox
        android:id="@+id/checkbox_TVOC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="TVOC"
        app:layout_constraintStart_toStartOf="@+id/checkbox_CO2"
        app:layout_constraintTop_toBottomOf="@+id/checkbox_CO2" />
    <CheckBox
        android:id="@+id/checkbox_Propane"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Propane"
        app:layout_constraintStart_toStartOf="@+id/checkbox_TVOC"
        app:layout_constraintTop_toBottomOf="@+id/checkbox_TVOC" />
    <CheckBox
        android:id="@+id/checkbox_CO"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="CO"
        app:layout_constraintStart_toStartOf="@+id/checkbox_Propane"
        app:layout_constraintTop_toBottomOf="@+id/checkbox_Propane" />
    <CheckBox
        android:id="@+id/checkbox_smoke"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Smoke"
        app:layout_constraintStart_toStartOf="@+id/checkbox_CO"
        app:layout_constraintTop_toBottomOf="@+id/checkbox_CO" />

    <CheckBox
        android:id="@+id/checkbox_Alcohol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Alcohol"
        app:layout_constraintStart_toStartOf="@+id/checkbox_smoke"
        app:layout_constraintTop_toBottomOf="@+id/checkbox_smoke" />
    <CheckBox
        android:id="@+id/checkbox_Methane"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Methane"
        app:layout_constraintStart_toStartOf="@+id/checkbox_Alcohol"
        app:layout_constraintTop_toBottomOf="@+id/checkbox_Alcohol" />
    <CheckBox
        android:id="@+id/checkbox_H2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="H2"
        app:layout_constraintStart_toStartOf="@+id/checkbox_Methane"
        app:layout_constraintTop_toBottomOf="@+id/checkbox_Methane" />




</androidx.constraintlayout.widget.ConstraintLayout>
